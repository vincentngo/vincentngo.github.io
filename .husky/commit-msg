#!/usr/bin/env sh

# Try to find bunx in common locations
if command -v bunx >/dev/null 2>&1; then
  bunx --no -- commitlint --edit $1
elif [ -f "$HOME/.bun/bin/bunx" ]; then
  "$HOME/.bun/bin/bunx" --no -- commitlint --edit $1
else
  # Fallback to npx if bunx is not found
  npx --no -- commitlint --edit $1
fi
